{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Timeline",
  "type": "object",
  "properties": {
    "OTIO_SCHEMA": {
      "default": "Timeline.1",
      "type": "string"
    },
    "metadata": {
      "default": null
    },
    "name": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "tracks": {
      "default": {
        "OTIO_SCHEMA": "Stack.1",
        "children": [],
        "metadata": null,
        "name": null
      },
      "allOf": [
        {
          "$ref": "#/definitions/Stack"
        }
      ]
    }
  },
  "definitions": {
    "Item": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "duration",
            "source",
            "type"
          ],
          "properties": {
            "OTIO_SCHEMA": {
              "default": "Clip.2",
              "type": "string"
            },
            "duration": {
              "type": "number",
              "format": "double"
            },
            "metadata": {
              "default": null
            },
            "name": {
              "default": null,
              "type": [
                "string",
                "null"
              ]
            },
            "source": {
              "$ref": "#/definitions/MediaSource"
            },
            "type": {
              "type": "string",
              "enum": [
                "clip"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "duration",
            "type"
          ],
          "properties": {
            "OTIO_SCHEMA": {
              "default": "Gap.1",
              "type": "string"
            },
            "duration": {
              "type": "number",
              "format": "double"
            },
            "metadata": {
              "default": null
            },
            "name": {
              "default": null,
              "type": [
                "string",
                "null"
              ]
            },
            "type": {
              "type": "string",
              "enum": [
                "gap"
              ]
            }
          }
        }
      ]
    },
    "MediaSource": {
      "type": "object",
      "required": [
        "url"
      ],
      "properties": {
        "OTIO_SCHEMA": {
          "default": "ExternalReference.1",
          "type": "string"
        },
        "media_duration": {
          "description": "Optional media duration if known",
          "default": null,
          "type": [
            "number",
            "null"
          ],
          "format": "double"
        },
        "media_start": {
          "description": "Offset into the media in seconds",
          "default": 0.0,
          "type": "number",
          "format": "double"
        },
        "metadata": {
          "default": null
        },
        "url": {
          "type": "string"
        }
      }
    },
    "Stack": {
      "type": "object",
      "properties": {
        "OTIO_SCHEMA": {
          "default": "Stack.1",
          "type": "string"
        },
        "children": {
          "default": [],
          "type": "array",
          "items": {
            "$ref": "#/definitions/Track"
          }
        },
        "metadata": {
          "default": null
        },
        "name": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Track": {
      "type": "object",
      "required": [
        "kind"
      ],
      "properties": {
        "OTIO_SCHEMA": {
          "default": "Track.1",
          "type": "string"
        },
        "children": {
          "default": [],
          "type": "array",
          "items": {
            "$ref": "#/definitions/Item"
          }
        },
        "kind": {
          "$ref": "#/definitions/TrackKind"
        },
        "metadata": {
          "default": null
        },
        "name": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "TrackKind": {
      "type": "string",
      "enum": [
        "video",
        "audio",
        "other"
      ]
    }
  }
}